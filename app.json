{
  "name": "QUIZ NINJA BOT",
  "description": "A powerful telegram Ai based poll sender bot for study groups",
  "keywords": [
    "QUIZNINJABOT",
    "mongodb",
    "python",
    "pyrogram"
  ],
  "buildpacks": [{
    "url": "heroku/python"
  }],
  "repository": "https://github.com/Xytra-zn/chatbot",
  "env": {
    "API_ID": {
      "description": "Get this value from my.telegram.org/apps.",
      "required": true,
      "value": ""
    },
    "API_HASH": {
      "description": "Get this value from my.telegram.org/apps.",
      "required": true,
      "value": ""
    },
    "BOT_TOKEN": {
      "description": "A Bot token from @BotFather",
      "required": true,
      "value": ""
    },
    "MONGO_URL": {
      "description": "Get a MongoDB URL from https://cloud.mongodb.com.",
      "required": true,
      "value": ""
    },
    "OWNER_ID": {
      "description": "User ID of the user who will be known as the owner of the bot.",
      "required": true,
      "value": ""
    },
    "CLASS_11": {
      "description": "Chat IDs for Class 11 (comma-separated)",
      "required": false,
      "value": ""
    },
    "CLASS_12": {
      "description": "Chat IDs for Class 12 (comma-separated)",
      "required": false,
      "value": ""
    },
    "CLASS_11_12": {
      "description": "Chat IDs for Class 11+12 (comma-separated)",
      "required": false,
      "value": ""
    }
  }
}
